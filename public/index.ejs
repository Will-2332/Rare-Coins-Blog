    <!-- Page Header-->
    <header class="masthead" style="background-image: url('images/home-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>The greatest showcoin!</h1>
                        <span class="subheading">My personal archive on extraordinary coins!</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <article class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <p>
                    <p>
                    <h1>Ask away!</h1>
                    <form action="search">
                        <p><label for="yearc">Year of the coin?</label><br></p>
                        <input type="number" id="yearc" name="yearc"><br>
                        <p><label for="denomc">Denomination of the coin?</label><br></p>
                        <input type="number" step="0.01" id="denomc" name="denomc">
                        <p><input type="submit" value="Search" onclick="search(yearc,denomc)"></p>
                    </form>
                    <p><button >Delete</button> <button onclick="save">Save</button></p>
                    <p id="demo"></p>
                    </p>
                    <table class="table">
                        <thead async>
                          <tr>
                            <th scope="col">Year</th>
                            <th scope="col">Denomination</th>
                            <th scope="col">Pic</th>
                            <th scope="col">History</th>
                            <th scope="col">Value</th>
                          </tr>
                        </thead>
                        <tbody>
                            <%coinsList.forEach(coins => {%>
                                <tr>
                            <tr>
                                <th scope="row"><%= coins._id %></th>
                                <td><%= coins.Year %></td>
                                <td><%= coins.Denomination %></td>
                                <td><%= <img src="coins.Pic" >%></td>
                                <td><%= coins.History %></td>
                                <td><%= coins.Value %></td>
                            </tr>
                        
                </div>
            </div>
        </div>
    </article>
